{
  "env": {
    "es6": true,
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "off",
    "import/no-unresolved": ["error", { "ignore": ["^expo-", "^@expo/"] }]
  },
  "plugins": ["prettier"]
}
